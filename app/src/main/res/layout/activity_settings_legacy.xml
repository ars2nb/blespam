<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_sa"
    android:fitsSystemWindows="true"
    android:fillViewport="true"
    android:clipToPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal"
        android:baselineAligned="false"
        android:paddingBottom="50dp">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp"
            android:src="@drawable/logo"
            android:transitionName="logo_transition"
            android:scaleType="centerInside"
            android:animation="@anim/scale_animation" />

        <Button
            android:id="@+id/button_report_bug"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="@string/bug_report"
            android:background="@drawable/button_gradient"
            android:textColor="@color/button_text_sa"
            android:textAllCaps="false"
            app:backgroundTint="@null"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:elevation="6dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="24dp"
            android:paddingHorizontal="16dp"
            android:stateListAnimator="@anim/button_elevation"
            android:foreground="?android:attr/selectableItemBackground"
            android:onClick="openBugReportActivity"
            tools:ignore="UsingOnClickInXml" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:strokeWidth="1dp"
            app:cardBackgroundColor="@color/card_background_sa">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/lang"
                    android:textColor="@color/text_primary_sa"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="8dp"
                    android:letterSpacing="0.01" />

                <Spinner
                    android:id="@+id/language_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:background="@drawable/spinner_gradient"
                    android:popupBackground="@drawable/spinner_popup_background"
                    android:paddingVertical="14dp"
                    android:paddingHorizontal="12dp"
                    android:spinnerMode="dropdown"
                    android:dropDownVerticalOffset="8dp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/card_background_sa">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/logo_animation"
                        android:textColor="@color/text_primary_sa"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-medium" />

                    <Switch
                        android:id="@+id/switch_logo_animation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:thumbTint="@color/switch_thumb_color"
                        android:trackTint="@color/switch_track_color"
                        android:minHeight="48dp"
                        android:scaleX="1.19"
                        android:scaleY="1.19"
                        android:layout_marginStart="12dp"
                        app:trackTintMode="multiply"
                        tools:ignore="UseSwitchCompatOrMaterialXml" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="20dp"
                    android:background="?android:attr/listDivider" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/material_switch"
                        android:textColor="@color/text_primary_sa"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-medium" />

                    <Switch
                        android:id="@+id/material_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:thumbTint="@color/switch_thumb_color"
                        android:trackTint="@color/switch_track_color"
                        android:minHeight="48dp"
                        android:scaleX="1.19"
                        android:scaleY="1.19"
                        android:layout_marginStart="12dp"
                        app:trackTintMode="multiply"
                        tools:ignore="UseSwitchCompatOrMaterialXml" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="20dp"
                    android:background="?android:attr/listDivider" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Vibration"
                        android:textColor="@color/text_primary_sa"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-medium" />

                    <Switch
                        android:id="@+id/switch_vibration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:thumbTint="@color/switch_thumb_color"
                        android:trackTint="@color/switch_track_color"
                        android:minHeight="48dp"
                        android:scaleX="1.19"
                        android:scaleY="1.19"
                        android:layout_marginStart="12dp"
                        app:trackTintMode="multiply"
                        tools:ignore="UseSwitchCompatOrMaterialXml" />

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:strokeWidth="1dp"
            app:cardBackgroundColor="@color/card_background_sa">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/theme"
                    android:textColor="@color/text_primary_sa"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="8dp"
                    android:letterSpacing="0.01" />

                <Spinner
                    android:id="@+id/theme_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:background="@drawable/spinner_gradient"
                    android:popupBackground="@color/spinner_popup_background_sa"
                    android:paddingVertical="14dp"
                    android:paddingHorizontal="12dp"
                    android:spinnerMode="dropdown"
                    android:dropDownVerticalOffset="8dp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <Button
            android:id="@+id/save_button"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="@string/save"
            android:background="@drawable/button_gradient"
            android:textColor="@color/button_text_sa"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:elevation="6dp"
            app:backgroundTint="@null"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="24dp"
            android:paddingHorizontal="16dp"
            android:stateListAnimator="@anim/button_elevation"
            android:visibility="gone" />

        <TextView
            android:id="@+id/text_app_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_secondary_sa"
            android:textSize="14sp"
            android:fontFamily="sans-serif-light"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:alpha="0.8"
            tools:text="v1.2.3" />

    </LinearLayout>

</ScrollView>
